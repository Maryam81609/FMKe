{eunit_opts, [
    verbose,
    {report, {eunit_surefire, [{dir,"."}]}}
]}.

{deps, [
    %% Hex dependencies
    {poolboy, "1.5.1"},
    {cowboy, "1.1.2"},
    {jsx, "2.8.2"},
    %% Non-hex dependencies in legacy mode
    {antidote_pb, {git, "https://github.com/SyncFree/antidote_pb", {tag, "erlang19"}}},
    {riakc, {git, "https://github.com/goncalotomas/riakc", {tag, "rebar3"}}},
    {eredis_cluster, "0.5.8"}
]}.

{profiles, [
    {prod, [
        {erl_opts, [no_debug_info, warnings_as_errors]},
        {relx, [{dev_mode, false}]}
    ]},
    {test, [
        {erl_opts, [debug_info]},
        {deps, [
            {hackney, "1.8.3"},
            {lasp_bench, {git, "https://github.com/lasp-lang/lasp-bench", {tag, "fmke"}}}
        ]}
    ]}
]}.

{relx, [
    {release, {fmk, "0.1.0"}, [fmk]},
    {vm_args, "config/vm.args"},
    {dev_mode, true},
    {include_erts, false},

    {overlay, [
        {copy, "bin/env", "bin"}
    ]},

    {overlay_vars, "config/vars.config"},
    {extended_start_script, true}
]}.
